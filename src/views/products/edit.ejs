<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head')  %>
</head>
<body>

    <%- include('../includes/header')  %>

    <section class="banner">
        <figure><img src="/images/banner-cc.png" alt="Banner de ofertas"></figure>   
    </section>
    <main>
        <section>
            <article class="header-form">
                <h2>Editar producto</h2>
            </article>
            <section>
                <form action="/products/:id?m=PUT" enctype="multipart/form-data" method="POST" class="form-registro">
                    <input type="hidden" name="id" value="<%= producto.id %>">
                    <fieldset>
                        <label for="nombre">Nombre del producto:</label>
                        <input type="text" name="nombre" id="nombre" required class="input-registro" value="<%= producto.nombre %>">
                    </fieldset>

                    <fieldset>
                        <label for="precio">Precio:</label>
                        <input type="number" name="precio" id="precio" required class="input-registro" value="<%= producto.precio %>">
                    </fieldset>

                    <fieldset>
                        <label for="descripcion">Descripción:</label>
                        <textarea name="descripcion" id="descripcion" cols="30" rows="2" required class="input-registro"><%= producto.descripcion%>"</textarea>
                    </fieldset>

                    <fieldset>
                        <label for="variedad">Variedad:</label>
                        <input type="text" name="variedad" id="variedad" required value="<%= producto.variedad %>" class="input-registro">
                    </fieldset>

                    <fieldset>
                        <label for="olfato">Aspecto olfativo:</label>
                        <input type="text" name="olfato" id="olfato" required value="<%= producto.olfato %>" class="input-registro">
                    </fieldset>
                    
                   <fieldset>
                        <label for="peso">Peso:</label>
                        <select name="peso" id="peso" class="input-registro">
                            <option value="">Elige una opción</option>
                            <option value="250g" <% if (producto.peso == '250g') { %>
                                selected
                               <% } %>>250g</option>
                            <option value="500g" <% if (producto.peso == '500g') { %>
                                selected
                               <% } %>>500g</option>
                            <option value="1kg" <% if (producto.peso == '1kg') { %>
                                selected
                               <% } %>>1Kg</option>
                        </select>
                   </fieldset>

                   <fieldset>
                        <label for="stock">Cantidad:</label>
                        <input type="number" name="stock" id="stock" required value="<%= producto.stock %>" class="input-registro">
                    </fieldset>

                   <fieldset>
                    <label for="categoria">Categoría:</label>
                    <select name="categoria" id="categoria" class="input-registro">
                        <option value="">Elige una opción</option>
                        <option value="grano" <% if (producto.categoria == 'En Grano') { %>
                         selected
                        <% } %>>En Grano</option>
                        <option value="espresso" <% if (producto.categoria == 'Molido Espresso') { %>
                            selected
                           <% } %>>Molido Espresso</option>
                        <option value="filtro" <% if (producto.categoria == 'Molido Filtro') { %>
                            selected
                           <% } %>>Molido Filtro</option>
                    </select>
                    </fieldset>

                    <fieldset>
                        <label for="informacion">Información:</label>
                        <textarea name="informacion" id="informacion" cols="60" rows="5" required><%= producto.informacion %></textarea>
                    </fieldset>

                    <fieldset>
                        <label for="packaging">Packaging:</label>
                        <textarea name="packaging" id="packaging" cols="30" rows="5" required class="input-registro"><%= producto.packaging %></textarea>
                    </fieldset>
    
                    <fieldset>
                        <label for="image">Imagen:</label>
                        <input type="file" name="image" id="image" required class="input-registro">
                    </fieldset>
    
                    <button type="submit" class="form-button">Crear</button>
                </form>
            </section>
            
        </section>
    </main>

    <%- include('../includes/footer')  %>
</body>
</html>