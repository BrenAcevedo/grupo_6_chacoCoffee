<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head')  %>
</head>
<body>

    <%- include('../includes/header')  %>

    <section class="banner">
        <figure><img src="/images/banner-cc.png" alt="Banner de ofertas"></figure>   
    </section>
    <main>
        <section>
            <article class="header-form">
                <h2>Editar producto</h2>
            </article>
            <section>
                <form action="/" method="POST" class="form-registro">
                    <fieldset>
                        <label for="nombreProducto">Nombre del producto:</label>
                        <input type="text" name="nombreProducto" id="nombreProducto" required class="input-registro">
                    </fieldset>

                    <fieldset>
                        <label for="precio">Precio:</label>
                        <input type="number" name="precio" id="precio" required class="input-registro">
                    </fieldset>

                    <fieldset>
                        <label for="descripcion">Descripción:</label>
                        <textarea name="descripcion" id="descripcion" cols="30" rows="2" required class="input-registro"></textarea>
                    </fieldset>

                    <fieldset>
                        <label for="variedad">Variedad:</label>
                        <input type="text" name="variedad" id="variedad" required class="input-registro">
                    </fieldset>

                    <fieldset>
                        <label for="olfato">Aspecto olfativo:</label>
                        <input type="text" name="olfato" id="olfato" required class="input-registro">
                    </fieldset>
                    
                   <fieldset>
                        <label for="peso">Peso:</label>
                        <select name="peso" id="peso" class="input-registro">
                            <option value="">Elige una opción</option>
                            <option value="250g">250g</option>
                            <option value="500g">500g</option>
                            <option value="1kg">1Kg</option>
                        </select>
                   </fieldset>

                   <fieldset>
                    <label for="categoria">Categoría:</label>
                    <select name="categoria" id="categoria" class="input-registro">
                        <option value="">Elige una opción</option>
                        <option value="grano">En Grano</option>
                        <option value="espresso">Molido Espresso</option>
                        <option value="filtro">Molido Filtro</option>
                    </select>
                    </fieldset>

                    <fieldset>
                        <label for="info">Información:</label>
                        <textarea name="info" id="info" cols="30" rows="5" required class="input-registro"></textarea>
                    </fieldset>

                    <fieldset>
                        <label for="packaging">Packaging:</label>
                        <textarea name="packaging" id="packaging" cols="30" rows="5" required class="input-registro"></textarea>
                    </fieldset>
    
                    <fieldset>
                        <label for="image">Imagen:</label>
                        <input type="file" name="image" id="image" required class="input-registro">
                    </fieldset>
    
                    <button type="submit" class="form-button">Crear</button>
                </form>
            </section>
            
        </section>
    </main>

    <%- include('../includes/footer')  %>
</body>
</html>